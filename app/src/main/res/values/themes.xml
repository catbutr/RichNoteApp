<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DefaultRecyclerViewStyle">
        <item name="android:background">@color/gray</item>
    </style>

    <!-- Fonts. -->
    <style name="Aldrich" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/aldrich_cyrillic</item>
    </style>

    <style name="Roboto" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Garamond" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/garamond_regular</item>
    </style>

